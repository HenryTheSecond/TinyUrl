{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "ReadTinyUrlRoute": {
        "ClusterId": "ReadTinyUrlCluster",
        "Match": {
          "Path": "/api/external/{tinyUrl}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          { "PathPattern": "/{tinyUrl}" }
        ]
      },
      "WriteTinyUrlRoute": {
        "ClusterId": "WriteTinyUrlCluster",
        "Match": {
          "Path": "/api/external/createTinyUrl",
          "Methods": [ "POST" ]
        },
        "Transforms": [
          { "PathPattern": "/createTinyUrl" }
        ]
      }
    },
    "Clusters": {
      "ReadTinyUrlCluster": {
        "Destinations": {
          "ReadTinyUrlDestination": {
            "Address": "https://localhost:7088/"
          }
        }
      },
      "WriteTinyUrlCluster": {
        "Destinations": {
          "WriteTinyUrlDestination": {
            "Address": "https://localhost:7201/"
          }
        }
      }
    }
  }
}